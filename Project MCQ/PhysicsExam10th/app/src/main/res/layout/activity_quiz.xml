<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ngoctri.introsliderexam.QuizEnd"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/question_count_label_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q1"
        android:textSize="22dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/question_label_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question"
        android:textSize="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="47dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/answer_btn1_id"
        android:layout_width="@dimen/answerBtn_width"
        android:layout_height="@dimen/answerBtn_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="55dp"
        android:text="answer1"
        android:onClick="checkAnswer"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        />
    <Button
        android:id="@+id/answer_btn2_id"
        android:layout_width="@dimen/answerBtn_width"
        android:layout_height="@dimen/answerBtn_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="answer2"
        android:onClick="checkAnswer"
        android:background="@color/colorPrimary"
        android:textColor="#fff"/>
    <Button
        android:id="@+id/answer_btn3_id"
        android:layout_width="@dimen/answerBtn_width"
        android:layout_height="@dimen/answerBtn_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="answer3"
        android:onClick="checkAnswer"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        />
    <Button
        android:id="@+id/answer_btn4_id"
        android:layout_width="@dimen/answerBtn_width"
        android:layout_height="@dimen/answerBtn_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="answer4"
        android:onClick="checkAnswer"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        />



</LinearLayout>
